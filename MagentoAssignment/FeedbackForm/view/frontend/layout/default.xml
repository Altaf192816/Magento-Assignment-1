<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="feedback-header-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Feedback</argument>
                    <argument name="path" xsi:type="string">feedback/index/index</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="feedback-footer-link">
                <arguments>
                    <argument name="label" xsi:type="string">Feedback</argument>
                    <argument name="path" xsi:type="string">feedback/index/index/</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
